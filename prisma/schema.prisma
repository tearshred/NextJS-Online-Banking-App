generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid()) // Primary key
  firstName String
  lastName  String
  address   String? // Optional address field
  email     String    @unique
  username  String    @unique
  password  String
  accounts  Account[] // Relation field linking to multiple accounts
}

model Account {
  id          String @id @default(uuid()) // Primary key
  accountType String // E.g., "savings", "checking"
  balance     Float  @default(0.0) // Initial balance set to 0
  userId      String // Foreign key to link Account to a User
  user        User   @relation(fields: [userId], references: [id]) // Defines relation
}
